<% provide:title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= avatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_profile"), @user, class: "profile-link" %></span>
      <span class="total-microposts">
        <%= @user.microposts.size %> <%= t ".microposts" %>
      </span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user-avatars">
          <% @users.each do |user| %>
            <%= link_to avatar_for(user, size: Settings.user.avatar_size), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="title"><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
